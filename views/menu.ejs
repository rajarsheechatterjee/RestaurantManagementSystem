<%- include("./partials/header") %>
<div class="container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to Food Ordering App</h1>
            <p>Order your favourite dishes here and get them delivered to your doorstep in less than 30 mins. Select dishes from your preferred cuisine from our wide variety of menu</p>
            <a href="/orders/new" class="btn btn-primary" style="width: 30%;">Order</a>
        </div>
    </header>

    <div class="row">  
        <div class="col-lg-12">
            <h3 style="margin-bottom: 15px;">Our most popular dishes</h3>
        </div>
    </div>

    <div class="row" style="display: flex; flex-wrap: wrap;">
    <%items.forEach(function(item){%>
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" style="height: 180px;" src="<%= item.image_url %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= item.name %></h5>
                    <p class="card-text"><%= item.body %></p>
                </div>
            </div>
        </div>        
    <% }); %>
    </div>

<%- include("./partials/footer") %>
