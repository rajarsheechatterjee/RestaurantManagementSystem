<%- include("./partials/header") %>

<div class="container">
    <h2 class="mt-3 mb-4">Reviews</h2>
    <div class="row">
        <% reviews.forEach(function(review){ %>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= review.username %></h5>
              <p class="card-text"><%= review.review %></p>
              <p class="card-text"><small class="text-muted">Reviewed on <%= review.reviewed_at.toDateString() %> at <%= review.reviewed_at.toTimeString().substring(0,8) %></small></p>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
</div>

<%- include("./partials/footer") %>

